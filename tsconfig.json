{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    }
  ],
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",

    "allowJs": true,
    "paths": {
      "@src/*": ["./src/*"]
    },
    "types": [
      "node",
      "@mescius/wijmo",
      "vue"
    ],
    "include": [
      "src/**/*",
      "src/shims-vue.d.ts" // Include your shims file
    ],
    "outDir": "./dist",
    "noImplicitAny": false
  }
}
